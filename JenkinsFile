pipeline {
    agent any
    
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AKIAXTHSTT3DRBVCILFV')
        AWS_SECRET_ACCESS_KEY = credentials('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')
        AWS_DEFAULT_REGION    = 'eu-west-1'
    }

    tools {
        terraform 'terraform'
    }

    stages {
        stage('Print AWS CLI Configuration') {
            steps {
                script {
                    sh 'aws configure list'
                }
            }
        }

        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Terraform Format') {
            steps {
                sh 'terraform fmt'
            }
        }

        stage('Terraform Validate') {
            steps {
                sh 'terraform validate'
            }
        }

        stage('Request Approval to Apply') {
            steps {
                timeout(activity: true, time: 5) {
                    input message: 'Need approval to apply', submitter: 'admin'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                script {
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }
}
